/**The class Dog inherits from class Mammal*/
public class Dog extends Mammal {
	private boolean aggressive;

	//Constructors
	/**Creates a Dog with String-variable latinName, int gestationTime and boolean stupid*/
	public Dog(String latinName, int GTime, boolean aggressive) {
		super(latinName, GTime);
		this.aggressive = aggressive;
		
	}
	/**Creates a Dog with String-variable latinName, int gestationTime, boolean stupid and String friendlyName*/
	public Dog(String latinName, int GTime, boolean aggressive, String Name) {
		super(latinName, GTime);
		this.aggressive = aggressive;
		this.Name = Name;
	}

	//Methods
	
	/**Checks if the Dog is, in fact, stupid*/
	public boolean isaggressive() {
		if (aggressive) {
			return true;
		} else {
			return false;
		}
	}
	
	/**Inherits and implements the abstract method getInfo from class Animal*/
	public String getInfo() {
		String s = "Hunden som heter " + super.getName() + " och tillhör rasen " + latinName + " är dräktig i " + super.getGTime() + " månader och är en ";
		if (this.isaggressive()) {
			s+="aggressiv vovve!";
		} else {
			s+="snell vovve!";
		}
		return s;
	}
	
}